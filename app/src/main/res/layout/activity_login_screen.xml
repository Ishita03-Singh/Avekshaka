<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".loginScreen">
    <TextView
        android:id="@+id/textt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:text="WELCOME BACK"
       app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/main02"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="0dp"/>
    <EditText
        android:id="@+id/emailtext"

        android:hint="Email"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:textColorHint="@color/main04"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textt"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect03"
        android:backgroundTint="@color/main02"
        />
    <EditText
        android:id="@+id/passwordtext"
app:layout_constraintTop_toBottomOf="@id/emailtext"
        android:hint="Password"
        android:textColorHint="@color/main04"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect03"
        android:backgroundTint="@color/main02"
        />
    <Button
        android:id="@+id/loginButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="LOGIN"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/main03"
        android:layout_width="wrap_content"
        android:background="@drawable/sharp_rect03"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/passwordtext"
        android:layout_centerHorizontal="true"
        android:minWidth="120dp"
        ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>